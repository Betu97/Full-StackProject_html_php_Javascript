{% extends "base.twig" %}
{% block title %} Login {% endblock %}
{% block styles %}
    <link rel="stylesheet" href="{{ base_url() }}/assets/css/login.css"/>
{% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="Absolute-Center is-Responsive">
                <div class="col-sm-12 col-md-10 col-md-offset-1">
                    <form action="{{ path_for('login') }}" method="POST" id="loginForm">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input class="form-control" type="text" name="username" placeholder="username"/>
                            <small class="text-danger" id="usernameError">
                                {% if errors['username'] is defined %}
                                    {{ errors['username'] }}
                                {% endif %}
                            </small>

                            <small class="text-danger" id="usernameErrorFormat">
                                {% if errors['usernameFormat'] is defined %}
                                    {{ errors['usernameFormat'] }}
                                {% endif %}
                            </small>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
                            </div>
                            <input class="form-control" type="password" name="password" placeholder="password"/>
                            <small class="text-danger" id="passwordError">
                                {% if errors['password'] is defined %}
                                    {{ errors['password'] }}
                                {% endif %}
                            </small>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="true" id="remember" name='remember'>
                            <label class="form-check-label" for="remember">
                                Remember me
                            </label>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                </div>
                                <div>
                                    <label>
                                        {% if errors is defined %}
                                            <ol>
                                                {% for error in errors %}
                                                    {%if error != errors['password'] and error != errors['username'] and error != errors['usernameFormat']%}
                                                        <li>{{ error }}</li>
                                                    {%endif%}
                                                {% endfor %}
                                            </ol>
                                        {% endif %}
                                    </label>
                                </div>
                                <div class="col-sm">
                                </div>
                                <div class="col-sm">
                                    <button type="submit" class="btn btn-primary">Login</button>
                                </div>
                                <div class="col-sm">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script
            type="application/javascript"
            src="{{ base_url() }}/assets/js/ajax.js"></script>
{% endblock %}


