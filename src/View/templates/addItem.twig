{% extends "base.twig" %}
{% block title %} Add Item {% endblock %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
                <form id="register-form" class = "register_form" action="{{ path_for('addItem') }}" method="POST">
                    <div>
                        <label>
                            Title
                            <input type="text" class="form-control" name="title" required>
                            {% if errors['title'] is defined %}
                                <li>{{ errors['title'] }}</li>
                            {% endif %}
                        </label>
                    </div>
                    <div>
                        <label>
                            Description
                            <input type="text" class="form-control" name="description" required>
                            {% if errors['description'] is defined %}
                                <li>{{ errors['description'] }}</li>
                            {% endif %}
                        </label>
                    </div>
                    <div>
                        <label>
                            Price
                            <input type="number" class="form-control" step="any" name="price" required>
                            {% if errors['price'] is defined %}
                                <li>{{ errors['price'] }}</li>
                            {% endif %}
                        </label>
                    </div>
                    <div>
                        <label>
                            Profile Image
                            <input type="file" name="files[]" multiple>
                        </label>
                    </div>
                    <div>
                        <label for="category">Category</label>
                        <select class="form-control" name="category" id="category" required>
                            <option>Computers and electronic</option>
                            <option>Cars</option>
                            <option>Sports</option>
                            <option>Games</option>
                            <option>Fashion</option>
                            <option>Home</option>
                            <option>Other</option>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-primary" value="Register">
                </form>
            </div>
            <div class="col-sm">
            </div>
        </div>
    </div>
{% endblock %}